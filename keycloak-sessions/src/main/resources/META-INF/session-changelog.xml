<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

  <changeSet id="001" author="Europeana">

    <createTable tableName="SESSION_HISTORY">
      <column name="ID" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="USER_ID" type="VARCHAR(36)"/>
      <column name="CLIENT_ID" type="VARCHAR(36)"/>
      <column name="IP_ADDRESS" type="VARCHAR(255)"/>
      <column name="REALM_ID" type="VARCHAR(36)"/>
      <column name="CREATED_TIMESTAMP" type="INT"/>
      <column name="UPDATED_TIMESTAMP" type="INT"/>
      <column name="SESSION_ID" type="VARCHAR(36)"/>
    </createTable>


    <addPrimaryKey columnNames="ID" constraintName="SESSION_HISTORY_PK1" tableName="SESSION_HISTORY"/>

    <createIndex indexName="IDX_SESSION_HISTORY_USER" tableName="SESSION_HISTORY">
      <column name="USER_ID" type="VARCHAR(36)"/>
    </createIndex>

    <createIndex indexName="IDX_SESSION_HISTORY_CLIENT" tableName="SESSION_HISTORY">
      <column name="CLIENT_ID" type="VARCHAR(36)"/>
    </createIndex>

    <createIndex indexName="IDX_SESSION_HISTORY_IP" tableName="SESSION_HISTORY">
      <column name="IP_ADDRESS" type="VARCHAR(255)"/>
    </createIndex>

    <createIndex indexName="IDX_SESSION_HISTORY" tableName="SESSION_HISTORY">
      <column name="USER_ID" type="VARCHAR(36)"/>
      <column name="CLIENT_ID" type="VARCHAR(36)"/>
      <column name="IP_ADDRESS" type="VARCHAR(255)"/>
    </createIndex>

  </changeSet>