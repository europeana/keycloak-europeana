<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>eu.europeana</groupId>
    <artifactId>keycloak-europeana</artifactId>
    <version>2.0</version>
  </parent>

  <name>Sync Zoho Users</name>
  <artifactId>sync-zoho-user</artifactId>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javax.version>1.1.4</javax.version>
    <jboss.logging.version>3.4.1.Final</jboss.logging.version>
    <apache.httpclient.version>4.5.13</apache.httpclient.version>
<!--    <api.commons.version>0.3.23-SNAPSHOT</api.commons.version>-->
    <zohocrmsdk.version>1.0.0</zohocrmsdk.version>
  </properties>

  <repositories>
    <repository>
      <id>zohocrm-java-sdk-6-0</id>
      <url>https://maven.zohodl.com</url>
    </repository>
  </repositories>

  <dependencies>

    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-core</artifactId>
      <version>${keycloak.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-services</artifactId>
      <version>${keycloak.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-server-spi</artifactId>
      <version>${keycloak.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-server-spi-private</artifactId>
      <version>${keycloak.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.jboss.logging</groupId>
      <artifactId>jboss-logging</artifactId>
      <version>${jboss.logging.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>${apache.httpclient.version}</version>
    </dependency>

    <dependency>
      <groupId>javax.json</groupId>
      <artifactId>javax.json-api</artifactId>
      <version>${javax.version}</version>
      <scope>provided</scope>
    </dependency>


    <!-- https://artifactory.eanadev.org/artifactory/webapp/#/artifacts/browse/tree/General/ext-release-local/com/zoho/crm/zohocrmsdk-6-0/1.0.0/ -->
    <dependency>
      <groupId>com.zoho.crm</groupId>
      <artifactId>zohocrm-java-sdk-6-0</artifactId>
      <version>${zohocrmsdk.version}</version>
    </dependency>


<!--    <dependency>-->
<!--      <groupId>eu.europeana.api.commons</groupId>-->
<!--      <artifactId>commons-api-services</artifactId>-->
<!--      <version>${api.commons.version}</version>-->
<!--    </dependency>-->

  </dependencies>

  <build>
    <finalName>sync-zoho-user</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <outputDirectory>../addon-jars</outputDirectory>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
      </plugin>


      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactItems>
            <artifactItem>
              <groupId>com.zoho.crm</groupId>
              <artifactId>zohocrm-java-sdk-6-0</artifactId>
              <version>${zohocrmsdk.version}</version>
              <type>jar</type>
              <overWrite>true</overWrite>
              <outputDirectory>../dependencies</outputDirectory>
              <destFileName>zohocrm-java-sdk-6-0-1.0.0.jar</destFileName>
            </artifactItem>
          </artifactItems>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>